@model Asm_AppdDev.ViewModels.TrainersCourses.TrainersToCoursesViewModels
@{
    ViewBag.Title = "Remove Trainer";
}

<div class="page-header">
    <h2 style="margin-bottom: 15px">Remove Trainer</h2>
</div>

@using (Html.BeginForm("RemoveTrainer", "AssignCourses", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger", @style = "margin-bottom:28px;" })
    <div class="form-group">
        <label>Course</label>
        @Html.DropDownListFor(m => m.CourseId,
        new SelectList(Model.Courses, "Id", "Name"),
        new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        <label>Trainer</label>
        @Html.DropDownListFor(m => m.TrainerId,
       new SelectList(Model.Trainers, "Id", "Name"),
       new { @class = "form-control" }
       )
    </div>
    <button type="submit" class="btn btn-primary">Remove Trainer</button>
}


@model IEnumerable<Asm_AppdDev.Models.Trainer>
@{
    ViewBag.Title = "IndexTrainer";
}

<div class="page-header">
    <h2 style="margin-bottom: 15px">List Of Trainer Account</h2>
</div>

<div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
    <div class="form-group">
        @Html.ActionLink("Create a New Trainer", "CreateTrainerAccount", "Admins", new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Trainer Email</th>
            <th scope="col">Trainer FullName</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle" scope="row">@item.User.Email</td>
                <td style="vertical-align: middle" scope="row">@item.Name</td> 
                <td>
                    @Html.ActionLink("Edit Trainer Info", "EditTrainerAccount", "Admins", new { id = @item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete Trainer", "DeleteTrainerAccount", "Admins", new { id = @item.TrainerId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Password Change", "TrainerPasswordChange", "Admins", new { id = @item.TrainerId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Trainer Details", "TrainerInfoDetails", "Admins", new { id = @item.TrainerId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
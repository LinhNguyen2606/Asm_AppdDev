@model IEnumerable<Asm_AppdDev.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>
@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

@Html.ActionLink("Create New Category", "Create")

<table class="table">
    <tr>
        <th scope="col">#</th>
        <th>Category</th>
        <th>Description</th>
        <th scope="col">Action</th>

    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <th scope="row">@category.Id</th>
            <td>@category.Name</td>
            <td>@category.Description</td>


            <td>
                @Html.ActionLink("Edit", "Edit", new { id = category.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }
</table>


@Html.ActionLink("Back to home", "Index", "Home")